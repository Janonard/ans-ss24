{
  "target": "bmv2",
  "p4info": "build/router.p4.p4info.txt",
  "bmv2_json": "build/router.json",
  "table_entries": [
    {
      "table": "MyIngress.handle_arp",
      "match": {
        "hdr.arp.target_protocol_address": "10.0.1.10",
        "hdr.arp.operation": 1
      },
      "action_name": "MyIngress.respond_arp_request",
      "action_params": {
        "router_mac": "08:00:00:00:01:00",
        "router_ip": "10.0.1.10"
      }
    },
    {
      "table": "MyIngress.handle_ipv4",
      "match": {
        "hdr.ipv4.target_address": ["10.0.1.1", 32]
      },
      "action_name": "MyIngress.forward_ip_packet",
      "action_params": {
        "out_port": 1,
        "src_mac": "08:00:00:00:01:00",
        "dst_mac": "08:00:00:00:01:11"
      }
    },
    {
      "table": "MyIngress.handle_ipv4",
      "match": {
        "hdr.ipv4.target_address": ["10.0.3.0", 24]
      },
      "action_name": "MyIngress.forward_ip_packet",
      "action_params": {
        "out_port": 3,
        "src_mac": "08:00:00:00:01:00",
        "dst_mac": "08:00:00:00:03:00"
      }
    }
  ]
}
